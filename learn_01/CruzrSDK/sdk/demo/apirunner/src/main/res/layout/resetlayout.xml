<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="600dp"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/finger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finger"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/leftfingerup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftfingerup"/>
            <Button
                android:text="@string/leftfingerdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftfingerdown"/>
            <Button
                android:text="@string/rightfingerup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightfingerup"/>
            <Button
                android:text="@string/rightfingerdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightfingerdown"/>

        </LinearLayout>

        <TextView
            android:text="@string/setzero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/setzero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zerosetting"/>

            <Button
                android:text="@string/setreleaseenerg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ScrollView
            android:id="@+id/scrollViewconsole"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="console"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/console"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>